<h1>Create New Course</h1>

<%= render "shared/errors" %>

<form action="<%= courses_url %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

    <label for="course_name">Course Name</label>
    <input
      type="text"
      name="course[course_name]"
      id="course_name"
      value="<%= @course.course_name %>">

    <label for="course_date">Course Date</label>
    <input
      type="date"
      name="course[course_date]"
      id="course_date"
      value="<%= @course.course_date %>">
    <br>

    <label for="course_time">Course Time</label>
    <input
      type="time"
      name="course[course_time]"
      id="course_time"
      value="<%= @course.course_time %>">

    <label for="max_size">Maximum Number of Students</label>
    <input
      type="text"
      name="course[max_size]"
      id="max_size"
      value="<%= @course.max_size %>">

    <label for="description">Course Description</label>
    <input
      type="text"
      name="course[description]"
      id="description"
      value="<%= @course.description %>">


  <input type="submit" value="Create course">
</form>
